pipeline {
    agent any
    
    tools {
        maven 'mymaven'  
    }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/srinath-1997/star-agile-insurance-project.git'
            }
        }

        stage('Test Code') {
            steps {
                sh 'mvn test' 
            }
        }

        stage('Build Code') {
            steps {
                sh 'mvn package'  
            }
        }

        stage('Build Image') {
            steps {
                sh 'docker build -t insurenceproject:v1 .'  
            }
        }

        stage('Push the Image to Dockerhub') {
            steps {
                withCredentials([string(credentialsId: 'DOCKER_HUB_PASWD', variable: 'DOCKER_HUB_PASWD')]) {
                    sh 'docker login -u srinath7019 -p ${DOCKER_HUB_PASWD}'  
                }
                sh 'docker tag insurenceproject:v1 srinath7019/insurenceproject:v1'  
                sh 'docker push srinath7019/insurenceproject:v1' 
            }
        }

        stage('Execute Ansible Playbook') {
            steps {
                ansiblePlaybook(
                    credentialsId: 'ansible', 
                    disableHostKeyChecking: true,
                    installation: 'ansible', 
                    inventory: '/home/ansiuser/myinventory',  
                    playbook: 'ansible-playbook.yml',  
                    vaultTmpPath: '' 
                )
            }
        }
    }
}
