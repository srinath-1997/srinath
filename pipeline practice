- name: configure docker
  hosts: all
  become: true
  tasks

  - name: updating the apt
    command: apt-get update 

  - name: install the docker
    apt:
      name: docker.io
      state: present

  - name: start the docker
     service:
       name: docker
       state: started

 - name: depoly to container
   command: docker run -d -p 8080:8082 srinath7019/healthcareproject:1
